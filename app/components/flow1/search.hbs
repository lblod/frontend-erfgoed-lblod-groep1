{{page-title "Search"}}
<LayoutHome>
  <AuBodyContainer class="au-u-background-white-100 au-o-flow">
        <section class="c-home">
      <div class="au-o-flow">
        <AuContent>
              <div class="au-o-grid">
      <div class="au-o-grid__item au-u-1-2@medium">
        <AuHeading @level="2" @skin="4" class="au-u-margin-bottom">You searched
          for {{this.address.combineFullAddress}}</AuHeading>
           </div>
      <div class="au-o-grid__item au-u-1-2@medium">
        <AuButton>Existing permissions for this property</AuButton>
      </div>
    </div>
    <AuAlert
      class="au-u-margin-top"
      @title="This adres has a cultural heritage site"
      @skin="success"
      @icon="check"
    />

    <div class="au-u-margin-top au-u-margin-left">
      <AuHeading @level="6" @skin="6" class="au-u-margin-bottom">Monument data</AuHeading>
      <div class="au-o-grid">

        <div
          class="au-o-grid__item au-u-1-2@medium au-u-background-gray-100"
        >Monument data
                <div>
                  <strong>Name</strong>
                  <p>Mockup</p>
                </div>
                <div>
                  <strong>Location</strong>
                  <p>{{this.address.combineFullAddress}}</p>
                </div>



        </div>
        <div class="au-o-grid__item au-u-1-2@medium">
          <LeafletMap
            @lat={{this.address.lat}}
            @lng={{this.address.lon}}
            @zoom="18"
            class="map"
            as |layers|
          >
            <layers.tile
              @url="https://tile.openstreetmap.org/{z}/{x}/{y}.png"
            />
            <layers.marker
              @lat="50.858420478352606"
              @lng="4.3568442738185125"
              as |marker|
            />
          </LeafletMap>

        </div>
      </div>
    </div>


    </AuContent>
    </div>
    </section>
  </AuBodyContainer>
</LayoutHome>